extends layout 

block content 
    h1 #{title}

    if instruments.length 
        p #[strong You must delete all the instruments associated with this category to delete the category completely]

        div(class='items-delete')

            h4 Instruments

            dl 
            each instrument in instruments 
                dt 
                    p #{instrument.name}
                dd
            a(href='/catalog' class='options') Back to homepage

    else 
        p Are you sure you want to delete this category?

        form(method='POST' action ='')
            div(class='forms')
                input(type='hidden'
                    name='id'
                    required='true'
                    value=category._id)
            button(type='submit') Delete